<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btnMATouchPad"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_touchpad_keyboard" />

    <Button
        android:id="@+id/btnMANeedForSpeed"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_need_for_speed" />

    <Button
        android:id="@+id/btnMASlideShow"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_slide_show" />

    <Button
        android:id="@+id/btnMAWiFiEnable"
        android:layout_width="190dip"
        android:layout_height="wrap_content"
        android:text="@string/btn_slide_wifi" />

    <Button
        android:id="@+id/btnMASettings"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_settings" />

    <Button
        android:id="@+id/btnMAAbout"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_about" />

    <Button
        android:id="@+id/btnMAExit"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_exit" />

</LinearLayout>