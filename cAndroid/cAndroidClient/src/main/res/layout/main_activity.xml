<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about_info_text"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnMATouchPad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_touchpad_keyboard"/>


        <Button
            android:id="@+id/btnMANeedForSpeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_need_for_speed" />


        <Button
            android:id="@+id/btnMASlideShow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_slide_show" />
    </LinearLayout>

</LinearLayout>